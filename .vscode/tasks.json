{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dx serve (web)",
      "type": "shell",
      "command": "dx",
      "args": ["serve", "--platform", "web"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo",
      "args": ["check"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "cargo clippy",
      "type": "shell",
      "command": "cargo",
      "args": [
        "clippy",
        "--all-targets",
        "--all-features",
        "--",
        "-D",
        "warnings"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"],
      "group": "test"
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo",
      "args": ["test"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"],
      "group": "test"
    },
    {
      "label": "tailwind: build",
      "type": "shell",
      "command": "npx",
      "args": [
        "tailwindcss",
        "-i",
        "./input.css",
        "-o",
        "./assets/tailwind.css"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "tailwind: watch",
      "type": "shell",
      "command": "npx",
      "args": [
        "tailwindcss",
        "-i",
        "./input.css",
        "-o",
        "./assets/tailwind.css",
        "--watch"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "dev: serve",
      "dependsOn": ["tailwind: watch", "dx serve (web)"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
